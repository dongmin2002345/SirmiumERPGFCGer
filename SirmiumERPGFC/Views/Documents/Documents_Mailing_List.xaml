                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button x:Name="btnShowDocument" Click="btnShowConstructionSiteDocument_Click" Margin="2 0 0 0" CommandParameter="{Binding}" ToolTip="Prikaži dokument">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="..\..\Resources\Icons\radniNalog.png" HorizontalAlignment="Center" Height="16" Width="16" />
                                                    </StackPanel>
                                                </Button>
                                                <Button x:Name="btnOpenFolderConstructionSite" Click="btnOpenFolder_ConstructionSite_Click" Margin="2 0 0 0" CommandParameter="{Binding}" ToolTip="Prikaži dokument">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="..\..\Resources\Icons\OtvoriFolder.png" HorizontalAlignment="Center" Height="16" Width="16" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>

                        <Button Grid.Row="4" x:Name="btnAddCheckedConstructionSiteDocuments" Click="btnAddCheckedConstructionSiteDocuments_Click" Margin="2"  Background="#007ACC" 
                                        IsEnabled="{Binding Path=ConstructionSiteDocumentDataLoading, Converter={StaticResource inverseBoolConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{DynamicResource DodajStavke}" FontSize="12" FontWeight="Bold" VerticalAlignment="Center" />
                                <Image Source="..\..\Resources\Icons\DuplaStrelicaDesna.png" HorizontalAlignment="Center" Height="32" Width="32" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </StackPanel>
                        </Button>
                    </Grid>
