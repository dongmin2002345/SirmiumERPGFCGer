                                                        <Image Source="..\..\Resources\Icons\OtvoriFolder.png" HorizontalAlignment="Center" Height="16" Width="16" />
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Grid.Row="4" x:Name="btnAddCheckedBusinessPartnerDocuments" Click="btnAddCheckedBusinessPartnerDocuments_Click" Margin="2" Background="#007ACC" 
