                                <DatePicker Grid.Row="0" Grid.Column="5" x:Name="dtBusinessPartnerFrom" SelectedDate="{Binding Path=FilterBusinessPartnerDocuments.Search_DateFrom, Mode=TwoWay}" Margin="5 0 5 0" />

                                <TextBlock Grid.Row="0" Grid.Column="6" Text="{DynamicResource DatumDoDvotacka}" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
