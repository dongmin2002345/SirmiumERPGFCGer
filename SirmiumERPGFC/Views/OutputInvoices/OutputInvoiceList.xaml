<UserControl x:Class="SirmiumERPGFC.Views.OutputInvoices.OutputInvoiceList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SirmiumERPGFC.Views.OutputInvoices"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:cbxConverters1="clr-namespace:WpfAppCommonCode.Converters;assembly=WpfAppCommonCode"
             xmlns:syncedConverter="clr-namespace:WpfAppCommonCode.Converters.Common;assembly=WpfAppCommonCode"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800" Background="White">
    
    <UserControl.Resources>
        <cbxConverters1:StringDateTimeShortConverter x:Key="cbxDatetimeToStringConverter" />
        <cbxConverters1:BoolStringConverter x:Key="BoolStringConverter" />
        <syncedConverter:SyncedConverter x:Key="SyncedConverter" />
        <cbxConverters1:ChooseStatusConverter x:Key="cbxChooseStatusConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--    Search box    -->
        <Expander x:Name="searchExpander" Margin="5,5,5,0" Header="Pretraga" IsExpanded="False" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />

                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                
                <TextBlock Text="Poslovni partner"  Grid.Column="0" VerticalAlignment="Center" Margin="5" Height="16"/>
                <TextBox x:Name="txtSearchByBussinesPartner" Grid.Column="1" 
                         Text="{Binding Path=OutputInvoiceSearchObject.SearchBy_BusinessPartner, UpdateSourceTrigger=PropertyChanged}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>

                <TextBlock Text="Dobavljač" Grid.Column="2" VerticalAlignment="Center" Margin="5" Height="16"/>
                <TextBox x:Name="txtSearchBySupplier" Grid.Column="3" 
                         Text="{Binding Path=OutputInvoiceSearchObject.SearchBy_Supplier, UpdateSourceTrigger=PropertyChanged}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>


                <TextBlock Text="Broj fakture" Grid.Column="4" VerticalAlignment="Center" Margin="5" Height="16"/>
                <TextBox x:Name="txtSearchByInvoiceNumber" Grid.Column="5" 
                         Text="{Binding Path=OutputInvoiceSearchObject.SearchBy_InvoiceNumber, UpdateSourceTrigger=PropertyChanged}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>


                <TextBlock Text="Datum fakture od"  Grid.Column="0" VerticalAlignment="Center" Grid.Row="1" Margin="5,6" Height="16"/>
                <DatePicker x:Name="dtSearchByInvoiceDateFrom" Grid.Column="1" Grid.Row="1" 
                         SelectedDate="{Binding Path=OutputInvoiceSearchObject.SearchBy_InvoiceDateFrom}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>

                <TextBlock Text="Datum fakture do"  Grid.Column="2" VerticalAlignment="Center" Grid.Row="1" Margin="5,6" Height="16"/>
                <DatePicker x:Name="dtSearchByInvoiceDateTo" Grid.Column="3" Grid.Row="1" 
                         SelectedDate="{Binding Path=OutputInvoiceSearchObject.SearchBy_InvoiceDateTo}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>
                <TextBlock Text="Datum plaćanja od"  Grid.Column="4" VerticalAlignment="Center" Grid.Row="1" Margin="5,6" Height="16"/>
                <DatePicker x:Name="dtSearchByCalculationDateFrom" Grid.Column="5" Grid.Row="1" 
                         SelectedDate="{Binding Path=OutputInvoiceSearchObject.SearchBy_DateOfPaymentFrom}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>

                <TextBlock Text="Datum plaćanja do"  Grid.Column="0" VerticalAlignment="Center" Grid.Row="2" Margin="5,6" Height="16"/>
                <DatePicker x:Name="dtSearchByCalculationDateTo" Grid.Column="1" Grid.Row="2" 
                         SelectedDate="{Binding Path=OutputInvoiceSearchObject.SearchBy_DateOfPaymentTo}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>


                <!--<TextBlock Text="Broj računa"  Grid.Column="0" VerticalAlignment="Center" Margin="5" Height="16"/>
                <TextBox x:Name="txtSearchByOutputInvoiceCode" Grid.Column="1" 
                         Text="{Binding Path=OutputInvoiceFilterObject.SearchBy_Code, UpdateSourceTrigger=PropertyChanged}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>

                <TextBlock Text="Gradilište" Grid.Column="2" VerticalAlignment="Center" Margin="5" Height="16"/>
                <TextBox x:Name="txtSearchByBusinessPartnerName" Grid.Column="3" 
                         Text="{Binding Path=OutputInvoiceFilterObject.SearchBy_Construction, UpdateSourceTrigger=PropertyChanged}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>


                <TextBlock Text="Firma" Grid.Column="4" VerticalAlignment="Center" Margin="5" Height="16"/>
                <TextBox x:Name="txtSearchByBusinessPartnerName1" Grid.Column="5" 
                         Text="{Binding Path=OutputInvoiceFilterObject.SearchBy_BusinessPartner, UpdateSourceTrigger=PropertyChanged}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>
                

                <TextBlock Text="Datum od"  Grid.Column="0" VerticalAlignment="Center" Grid.Row="1" Margin="5,6" Height="16"/>
                <DatePicker x:Name="dtSearchByCalculationDateFrom" Grid.Column="1" Grid.Row="1" 
                         SelectedDate="{Binding Path=OutputInvoiceFilterObject.SearchBy_DateFrom}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>

                <TextBlock Text="Datum do"  Grid.Column="2" VerticalAlignment="Center" Grid.Row="1" Margin="5,6" Height="16"/>
                <DatePicker x:Name="dtSearchByCalculationDateTo" Grid.Column="3" Grid.Row="1" 
                         SelectedDate="{Binding Path=OutputInvoiceFilterObject.SearchBy_DateTo}"
                         Margin="2"
                         Controls:TextBoxHelper.ClearTextButton="True"/>-->

                <Button  x:Name="btnSearch" Click="btnSearch_Click" Margin="5,6" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="..\..\Resources\Icons\search.png" HorizontalAlignment="Center" Height="16" Width="16" />
                        <TextBlock Text=" Prikaži " />
                    </StackPanel>
                </Button>

            </Grid>
        </Expander>

        <!--    List of all data    -->
        <GroupBox Header="Izlazne fakture" Margin="5,2,5,0" Grid.Row="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <Button x:Name="btnAddOutputInvoice" Click="btnAdd_Click" HorizontalAlignment="Left" Margin="5" Width="200">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\plus.png" HorizontalAlignment="Center" Height="16" Width="16" />

                            <TextBlock Text=" Dodaj" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnRefresh" Click="btnRefresh_Click" Margin="5" IsEnabled="{Binding Path=RefreshButtonEnabled, Mode=TwoWay}"  Width="200">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\refresh.png" HorizontalAlignment="Center" Height="16" Width="16" />
                            <TextBlock Text="{Binding Path=RefreshButtonContent, Mode=TwoWay}" />
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnPrint" Click="btnPrint_Click" HorizontalAlignment="Left" Margin="5" Width="200">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\printer.png" HorizontalAlignment="Center" Height="16" Width="16" />

                            <TextBlock Text=" Štampaj" />
                        </StackPanel>
                    </Button>

                </StackPanel>

                <!-- Pagination -->
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button x:Name="btnFirstPage" Click="btnFirstPage_Click" Margin="2" Width="30" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\chevron0.png" HorizontalAlignment="Center" Height="16" Width="16" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnPrevPage" Click="btnPrevPage_Click" Margin="2" Width="30" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\chevron.png" HorizontalAlignment="Center" Height="16" Width="16" />
                        </StackPanel>
                    </Button>
                    <TextBox IsEnabled="False" Margin="2" Text="{Binding Path=PaginationDisplay}"/>
                    <Button x:Name="btnNextPage" Click="btnNextPage_Click" Margin="2" Width="30" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\chevron2.png" HorizontalAlignment="Center" Height="16" Width="16" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnLastPage" Click="btnLastPage_Click" Margin="2" Width="30" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="..\..\Resources\Icons\chevron3.png" HorizontalAlignment="Center" Height="16" Width="16" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Controls:ProgressRing Grid.Row="2" IsActive="{Binding OutputInvoiceDataLoading, Mode=TwoWay}" Foreground="{DynamicResource AccentColorBrush}" Panel.ZIndex="10"/>
                <DataGrid x:Name="dgOutputInvoices"
                              Grid.Row="2" Margin="0 5 0 0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              CanUserResizeColumns="True"  
                              GridLinesVisibility="All"
                              HorizontalGridLinesBrush="Gray"
                              Style="{DynamicResource AzureDataGrid}"
                              ItemsSource="{Binding Path=OutputInvoicesFromDB}"
                              SelectedItem="{Binding Path=CurrentOutputInvoice}" >

                    <DataGrid.Columns>
                        <DataGridTextColumn SortMemberPath="Code" Header="Šifra" Binding="{Binding Code}"  IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="BussinesPartner.Name" Header="Poslovni partner" Binding="{Binding BussinesPartner.Name}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="Supplier" Header="Dobavljač" Binding="{Binding Supplier}"  IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="Address" Header="Adresa" Binding="{Binding Address}" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="InvoiceNumber" Header="Broj fakture" Binding="{Binding InvoiceNumber}" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="InvoiceDate" Header="Datum fakture" Binding="{Binding InvoiceDate}" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="AmountNet" Header="Iznos neto" Binding="{Binding AmountNet}"  IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="PdvPercent" Header="PDV%" Binding="{Binding PdvPercent}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="Pdv" Header="PDV" Binding="{Binding Pdv}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="AmountGross" Header="Iznos bruto" Binding="{Binding AmountGross}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="Currency" Header="Valuta" Binding="{Binding Currency}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="Status" Header="Status" Binding="{Binding Status, Converter={StaticResource cbxChooseStatusConverter} }" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="StatusDate" Header="Datum statusa" Binding="{Binding StatusDate}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="IsSynced" Header="Sin" Binding="{Binding IsSynced, Converter={StaticResource BoolStringConverter}}" IsReadOnly="True" >
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}" >
                                    <Setter Property="Background" Value="{Binding IsSynced, Converter={StaticResource SyncedConverter}}" />
                                </Style>
                            </DataGridTextColumn.CellStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                    <Setter Property="Margin" Value="2 0 2 0" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button x:Name="btnEdit" Click="btnEdit_Click" Margin="0" CommandParameter="{Binding}" ToolTip="Promeni">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="..\..\Resources\Icons\edit.png" HorizontalAlignment="Center" Height="16" Width="16" />
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnDelete" Click="btnDelete_Click" Margin="3 0 0 0" CommandParameter="{Binding}" ToolTip="Obriši">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="..\..\Resources\Icons\delete.png" HorizontalAlignment="Center" Height="16" Width="16" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <!--<DataGridTextColumn SortMemberPath="Construction" Header="Gradilište" Binding="{Binding Construction}"  Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="BusinessPartner" Header="Firma" Binding="{Binding BusinessPartner}"  Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="InvoiceDate" Header="Datum računa" Binding="{Binding InvoiceDate}"  Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="CreatedBy.Username" Header="Kreirao/promenio" Binding="{Binding CreatedBy.Username}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn SortMemberPath="UpdatedAt" Header="Vreme izmene" Binding="{Binding UpdatedAt}" Width="*" IsReadOnly="True"  />-->
                        
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </GroupBox>

    </Grid>

</UserControl>
