<Controls:MetroWindow
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    x:Class="SirmiumERPGFC.Views.Employees.Employee_ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SirmiumERPGFC.Views.Employees"
        xmlns:rdlcreport="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
    mc:Ignorable="d"
        Title="{DynamicResource Radnici}" Height="450" Width="800">
    <Grid>
        <GroupBox Grid.Row="0" Margin="2" Header="{DynamicResource Radnici}">
            <WindowsFormsHost Name="windowsFormsHost">
                <rdlcreport:ReportViewer x:Name="rdlcEmployeeReport" />
            </WindowsFormsHost>
        </GroupBox>
    </Grid>
</Controls:MetroWindow>
